<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.team.springtour.mapper.user.AuthorityMapper">
	
	<select id="selectRoleByUserId" resultType="com.team.springtour.domain.user.AuthorityDto">
		SELECT userId, role FROM Authority
		WHERE userId = #{userId}
	</select>
	
</mapper>














